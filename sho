import discord
import os
import requests
import json

client = discord.Client()

async def get_quote(message):
  #await message.channel.send('in get_quote')
  await message.channel.send("https://shop.adidas.co.za/")
  response = requests.get("https://shop.adidas.co.za/")
  json_data = json.loads(response.text)
  quote = json_data[0]['q']
  return (quote)

@client.event
async def on_ready():
  print('We have logged in as {0.user}'.format(client))


@client.event
async def on_message(message):
  # print(message.content)
  # await message.channel.send(message.content)
  # response = requests.
  # response.send(message.content)
  if message.author == client.user:
    print('message sent by the author')
    return

  if message.content.startswith('!drops'):
    # await message.channel.send('got !drops')
    quote = await get_quote(message)
    await message.channel.send(quote)
